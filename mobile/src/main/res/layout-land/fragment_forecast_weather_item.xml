<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin_between_elements"
    android:paddingRight="@dimen/margin_between_elements">

    <ImageView
        android:id="@+id/img_status_forecast"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/txt_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_between_elements"
        android:layout_toRightOf="@+id/img_status_forecast"
        android:text="Wednesday"
        android:textSize="@dimen/global_text_size_large" />

    <TextView
        android:id="@+id/txt_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_day"
        android:layout_centerVertical="true"
        android:layout_marginLeft="150dp"
        android:layout_toRightOf="@+id/img_status_forecast"
        android:minWidth="80dp"
        android:text="22Â°C"
        android:textSize="@dimen/global_text_size_large"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_day"
        android:layout_centerVertical="true"
        android:layout_marginLeft="250dp"
        android:layout_toRightOf="@+id/img_status_forecast"
        android:text="Synny Synny "
        android:textSize="@dimen/global_text_size_small" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/img_status_forecast"
        android:layout_marginTop="@dimen/margin_between_elements"
        android:layout_toRightOf="@+id/img_status_forecast"
        android:background="@color/frame_dark" />

</RelativeLayout>