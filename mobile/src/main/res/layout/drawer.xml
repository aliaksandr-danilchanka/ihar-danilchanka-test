<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/window_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/menu_item_today"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:layout_marginTop="@dimen/margin_between_elements"
        android:background="@drawable/btn_white">

        <ImageView
            android:id="@+id/img_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_between_elements"
            android:layout_marginRight="@dimen/margin_between_elements"
            android:src="@drawable/ic_drawer_today_dark" />

        <TextView
            android:id="@+id/txt_drawer_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_today"
            android:text="@string/drawer_menu_today"
            android:textColor="@color/global_color_primary"
            android:textSize="@dimen/global_text_size_medium" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu_item_forecast"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:background="@drawable/btn_white">

        <ImageView
            android:id="@+id/img_forecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_between_elements"
            android:layout_marginRight="@dimen/margin_between_elements"
            android:src="@drawable/ic_drawer_forecast_dark" />

        <TextView
            android:id="@+id/txt_drawer_forecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_forecast"
            android:text="@string/drawer_menu_forecast"
            android:textColor="@color/global_text_primary"
            android:textSize="@dimen/global_text_size_medium" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_between_elements"
        android:background="@color/frame_dark" />
</LinearLayout>